{
    "manifest_version": 2, 
    "name": "DEMO",
    "description": "UPDATE: Description of your plugin",
    "version": "1.0",
    "permissions": ["activeTab"],
    "content_scripts": [
        {
            "matches": ["<all_urls>"],
            "allFrames": true,
            "js": ["/js/jquery.js", "/js/content.js", "/js/popup.js"],
            "css": ["/css/style.css", "/css/popup.css"]
       }
     ],
    "action": {
        "default_icon": {
            "32":"/images/icon.png"
        },
        "default_popup": "popup.html"
    },
    "web_accessible_resources": [ 
        "images/*.jpg",
        "images/*.png" 
     ] 
}
